<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TestFormsApp.Views.CustomControls.ImageUserControl"
             >
    <ContentView.Content>
        <StackLayout Orientation="Vertical" HorizontalOptions="FillAndExpand" VerticalOptions="StartAndExpand">

            <Image Source="child1.jpg" HorizontalOptions="Start" Aspect="AspectFit" />
            <Label x:Name="DisplayLabel" HorizontalTextAlignment="Center"
                   HorizontalOptions="FillAndExpand" />
            
        </StackLayout>
    </ContentView.Content>
</ContentView>
