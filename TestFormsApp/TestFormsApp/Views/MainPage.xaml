<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:TestFormsApp"
             xmlns:customcontrol="clr-namespace:TestFormsApp.Views.CustomControls"
             xmlns:customproperty="clr-namespace:TestFormsApp.Views.CustomControls.CustomProperties"
             x:Class="TestFormsApp.Views.MainPage">

    <StackLayout VerticalOptions="Center" HorizontalOptions="FillAndExpand">
        <!-- Place new controls here -->    
         <customcontrol:ImageUserControl x:Name="ImageControl" DisplayText="{Binding ModelText}" 
                   customproperty:TextColorProperty.DisplayTextColor="Brown" />
        <Button x:Name="Test" Text="Click me" Clicked="Handle_Clicked" />
        
    </StackLayout>
</ContentPage>